{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"customizations": {
		"vscode": {
			"settings": {
				"editor.formatOnSave": true,
				"C_Cpp.clang_format_fallbackStyle": "Google"
			},
			"extensions": [
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.makefile-tools",
				"ZixuanWang.linkerscript",
				"zhwu95.riscv",
				"eamodio.gitlens",
				"GitHub.copilot"
			]
		}
	},
	"remoteUser": "root"
}